$block-l = 420px
$block-m = 280px
$block-s = 300px
$block-xs = 260px

.scene_advantages
  z-index 103
  text-align center
  &__items
    +above('m')
      margin 0 auto
      +above('l')
        width $block-l * 2 + 25px
      +at('m')
        width $block-m * 2 + 25px
  &__item
    +above('m')
      margin-top 60px
      float left
      box-sizing border-box
      &:nth-child(2)
      &:nth-child(4)
        margin-left 25px
      &:nth-child(3)
      &:nth-child(5)
        clear both
      +above('l')
        width $block-l
      +at('m')
        width $block-m
    +below('s')
      margin 60px auto 0 auto
      +at('s')
        width $block-s
      +below('xs')
        width $block-xs
    +below('xs')
      width $block-xs
      margin 40px auto 0 auto
    &-preview
      width 160px
      height 160px
      margin 0 auto
    &-icon
      display block
      width 100%
      height 100%
    &-label
      display block
      margin-top 20px
      font-weight normal
      letter-spacing 1px
      text-align left
      font-adaptive('label')
    &-description
      margin-top 10px
      text-align justify
      font-adaptive('content')